---
import { getCollection, type CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const poetryEntries = await getCollection('poetry');
  return poetryEntries.map((entry: CollectionEntry<'poetry'>) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

interface Props {
  entry: CollectionEntry<'poetry'>;
}

const { entry } = Astro.props as Props;
const { Content } = await entry.render();
const { title, date, category, tags, coverImage } = entry.data;

const formattedDate = `${date.getFullYear()}年${date.getMonth() + 1}月${date.getDate()}日`;
---

<BaseLayout title={`${title} | michaelwong.space`}>
  <div class="poetry-layout">
    <article class="poetry-article">
      <header class="article-header">
        <h1 class="article-title">{title}</h1>
        <div class="article-meta">
          <span class="article-date">{formattedDate}</span>
          {category && <span class="article-category">{category}</span>}
        </div>
        {tags && tags.length > 0 && (
          <div class="article-tags">
            {tags.map((tag: string) => (
              <a href={`/poetry?tag=${encodeURIComponent(tag)}`} class="tag">
                #{tag}
              </a>
            ))}
          </div>
        )}
      </header>

      <div class="article-content">
        <Content />
      </div>

      <footer class="article-footer">
        <a href="/poetry-prose" class="back-link">← 返回列表</a>
      </footer>
    </article>

    {coverImage && (
      <aside class="article-cover">
        <img src={coverImage} alt={`${title} 封面`} loading="lazy" />
      </aside>
    )}
  </div>
</BaseLayout>

<style>
  .poetry-layout {
    max-width: 1200px;
    margin: 0 auto;
    padding: 15vh 5vw 0;
    position: relative;
    left: -24px;
    min-height: 100vh;
    display: grid;
    grid-template-columns: minmax(0, 680px) minmax(240px, 360px);
    gap: 3.4rem;
    align-items: start;
    justify-content: space-between;
  }

  .poetry-article {
    max-width: 680px;
    display: flex;
    flex-direction: column;
  }

  .article-header {
    margin-bottom: 3rem;
  }

  .article-title {
    font-family: 'Bodoni Moda', 'Noto Serif SC', serif;
    font-size: 3rem;
    font-weight: 750;
    margin: 0 0 1rem 0;
    letter-spacing: 0.05em;
  }

  .article-meta {
    display: flex;
    gap: 1.5rem;
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.6);
    letter-spacing: 0.1em;
  }

  .article-date {
    display: inline-flex;
    align-items: center;
    text-transform: uppercase;
    font-size: 1rem;
  }

  .article-category {
    display: inline-flex;
    align-items: center;
    padding: 0.25rem 0.75rem;
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 2px;
  }

  .article-tags {
    display: flex;
    gap: 0.8rem;
    flex-wrap: wrap;
    margin-top: 1rem;
  }

  .tag {
    padding: 0.3rem 0.6rem;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 3px;
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .tag:hover {
    background: rgba(255, 255, 255, 0.15);
    color: rgba(255, 255, 255, 0.95);
    border-color: rgba(255, 255, 255, 0.4);
  }

  .article-content {
    flex: 1;
    font-family: 'Noto Sans SC', sans-serif;
    font-size: 1rem;
    line-height: 1.8;
    letter-spacing: 0.08em;
    color: rgba(255, 255, 255, 0.85);
    margin-bottom: 3rem;
  }

  .article-content :global(a) {
    color: #8ecbff;
    text-decoration-color: rgba(142, 203, 255, 0.6);
    text-underline-offset: 0.15em;
  }

  .article-content :global(a:hover) {
    color: #b8e1ff;
  }

  .article-content :global(p) {
    margin-bottom: 1.5rem;
  }

  .article-content :global(h2) {
    font-size: 1.8rem;
    font-weight: 500;
    margin: 2rem 0 1rem 0;
    color: rgba(255, 255, 255, 0.95);
  }

  .article-content :global(h3) {
    font-size: 1.3rem;
    font-weight: 500;
    margin: 1.5rem 0 0.75rem 0;
    color: rgba(255, 255, 255, 0.9);
  }

  .article-content :global(blockquote) {
    border-left: 3px solid rgba(255, 255, 255, 0.2);
    padding-left: 1.5rem;
    margin: 1.5rem 0;
    color: rgba(255, 255, 255, 0.7);
    font-style: italic;
  }

  .article-content :global(code) {
    background: rgba(255, 255, 255, 0.1);
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    font-family: 'Courier New', monospace;
    font-size: 0.9em;
  }

  .article-content :global(pre) {
    background: rgba(0, 0, 0, 0.3);
    padding: 1rem;
    border-radius: 4px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .article-content :global(pre code) {
    background: none;
    padding: 0;
  }

  .article-footer {
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    padding-top: 2rem;
  }

  .back-link {
    position: fixed;
    top: 24px;
    left: 24px;
    z-index: 20;
    display: inline-flex;
    align-items: center;
    padding: 0.4rem 0.7rem;
    border-radius: 4px;
    background: rgba(0, 0, 0, 0.35);
    backdrop-filter: blur(2px);
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .back-link:hover {
    color: rgba(255, 255, 255, 0.95);
    transform: translateX(-4px);
  }

  .article-cover {
    position: static;
    margin-left: 0;
    transform: translateX(-78px);
  }

  .article-cover img {
    width: 100%;
    display: block;
    border-radius: 6px;
  }

  @media (max-width: 1100px) {
    .poetry-layout {
      display: block;
      padding-top: 10vh;
      left: 0;
    }

    .poetry-article {
      max-width: 680px;
    }

    .article-cover {
      position: static;
      margin-left: 0;
      max-width: 680px;
      margin-top: 1.5rem;
      transform: none;
    }
  }

  @media (max-width: 768px) {
    .poetry-layout {
      margin: 0 auto;
      padding: 10vh 5vw 0;
      display: block;
      left: 0;
    }

    .poetry-article {
      max-width: none;
    }

    .article-title {
      font-size: 2rem;
    }

    .article-meta {
      flex-direction: column;
      gap: 0.5rem;
    }

    .article-cover {
      position: static;
      margin-left: 0;
      margin-top: 1.5rem;
      max-width: none;
      transform: none;
    }

    .back-link {
      top: 16px;
      left: 16px;
    }
  }
</style>
