---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Archive | michaelwong.space" archiveExhibitLights={true}>
  <section class="archive-container">
    <h1 class="page-title">
      <span id="typewriter"></span>
    </h1>

    <p class="page-subtitle">
      A personal archive for memoirs, video works, and everyday fragments.
    </p>

    <div class="divider"></div>

    <div class="archive-list">
      <article class="archive-card">
        <h2 class="archive-title">Memoirs</h2>
        <p class="archive-meta">Longform Notes</p>
        <p class="archive-desc">Life chapters, transitions, and reflective writing.</p>
      </article>

      <article class="archive-card">
        <h2 class="archive-title">Video Works</h2>
        <p class="archive-meta">Screen Journal</p>
        <p class="archive-desc">Published films, drafts, and production annotations.</p>
      </article>

      <article class="archive-card">
        <h2 class="archive-title">Fragments</h2>
        <p class="archive-meta">Daily Traces</p>
        <p class="archive-desc">Short notes, image studies, and captured details.</p>
      </article>
    </div>
  </section>

  <script src="https://unpkg.com/typed.js@2.1.0/dist/typed.umd.js"></script>
  <script>
    declare const Typed: any;
    document.addEventListener('DOMContentLoaded', () => {
      new Typed('#typewriter', {
        strings: ["Archive"],
        typeSpeed: 80,
        startDelay: 300,
        backDelay: 2500,
        loop: false,
        showCursor: true
      });
    });
  </script>
</BaseLayout>

<style>
  .archive-container {
    max-width: 720px;
    margin-left: 10vw;
    padding-top: 15vh;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
  }

  .page-title {
    font-family: 'Bodoni Moda', 'Noto Serif SC', serif;
    font-size: 3rem;
    font-weight: 420;
    margin: 0 0 0.5rem 0;
    height: 3.5rem;
    letter-spacing: 0.05em;
  }

  .page-title .typed-cursor {
    font-size: 3rem;
    color: var(--text-primary);
    font-family: 'Bodoni Moda', serif;
    font-weight: 300;
    animation: typedjsBlink 0.7s infinite;
  }

  @keyframes typedjsBlink {
    0%, 50%, 100% { opacity: 1; }
    25%, 75% { opacity: 0; }
  }

  .page-subtitle {
    font-family: 'Noto Sans SC', sans-serif;
    font-size: 1.1rem;
    letter-spacing: 0.1em;
    color: rgba(255,255,255,0.58);
    margin-bottom: 1.2rem;
    max-width: 46ch;
    line-height: 1.8;
  }

  .divider {
    width: 60px;
    height: 1px;
    background: rgba(255,255,255,0.32);
    margin-bottom: 2.6rem;
  }

  .archive-list {
    display: grid;
    gap: 1.2rem;
    padding-bottom: 4rem;
  }

  .archive-card {
    padding: 1.1rem 1.2rem;
    border: 1px solid rgba(255,255,255,0.2);
    background: rgba(255,255,255,0.03);
    backdrop-filter: blur(2px);
    transition: transform 0.3s ease, border-color 0.3s ease, background 0.3s ease;
  }

  .archive-card:hover {
    transform: translateX(4px);
    border-color: rgba(255,255,255,0.4);
    background: rgba(255,255,255,0.06);
  }

  .archive-title {
    margin: 0;
    font-family: 'Bodoni Moda', 'Noto Serif SC', serif;
    font-size: 1.55rem;
    font-weight: 430;
    letter-spacing: 0.03em;
  }

  .archive-meta {
    margin: 0.45rem 0 0.7rem 0;
    font-size: 0.72rem;
    letter-spacing: 0.2em;
    color: rgba(255,255,255,0.45);
    text-transform: uppercase;
  }

  .archive-desc {
    margin: 0;
    font-family: 'Noto Sans SC', sans-serif;
    line-height: 1.85;
    color: rgba(255,255,255,0.82);
  }

  @media (max-width: 768px) {
    .archive-container {
      margin-left: 5vw;
      margin-right: 5vw;
      padding-top: 11vh;
    }

    .page-title {
      font-size: 2rem;
      height: 2.5rem;
    }

    .page-title .typed-cursor {
      font-size: 2rem;
    }
  }
</style>
