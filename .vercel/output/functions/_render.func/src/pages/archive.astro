---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Archive 个人档案 | michaelwong.space";
---
<BaseLayout title={title}>
  <div class="archive-bg-lights" aria-hidden="true">
    <div class="light-source red-light-large"></div>
    <div class="light-source blue-light-small"></div>
  </div>
  <section class="archive-container">
    <div class="page-title-row">
      <h1 class="page-title">
        <span id="typewriter"></span>
      </h1>
      <span class="page-title-zh">个人档案</span>
    </div>
    <p class="page-subtitle">
      个人标识系统｜信息学竞赛回忆录｜<br>
      视频作品归档｜作品集归档｜零散碎片
    </p>
    <div class="divider"></div>
    <div class="archive-content-wrapper">
      <nav class="archive-list">
        <a href="/archive/vis" class="archive-item" data-desc="包括包括个人简介、主题色、徽标、中英文字标、中英文签字等" data-title="Identity
System">
          <span class="archive-num">I</span>
          <div class="archive-text">
            <span class="archive-zh">个人标识系统</span>
            <span class="archive-en">Identity System</span>
          </div>
        </a>
        <a href="/archive/memoir" class="archive-item" data-desc="《走过人生的复平面：个人信息学奥林匹克生涯回顾》
从最开始到一切的结局，完整详细的个人回忆录。" data-title="Olympiad
Memoir">
          <span class="archive-num">II</span>
          <div class="archive-text">
            <span class="archive-zh">竞赛回忆录</span>
            <span class="archive-en">Olympiad Memoir</span>
          </div>
        </a>
        <a href="/archive/video" class="archive-item" data-desc="收录了二两碘酊迄今为止的所有视频作品，包括个人创作、参赛作品与官方项目。" data-title="Video
Projects">
          <span class="archive-num">III</span>
          <div class="archive-text">
            <span class="archive-zh">视频作品</span>
            <span class="archive-en">Video Projects</span>
          </div>
        </a>
        <a href="/archive/notes" class="archive-item" data-desc="目前包括了手制书与组图，以后还有更多！" data-title="Visual
Notes">
          <span class="archive-num">IV</span>
          <div class="archive-text">
            <span class="archive-zh">作品集</span>
            <span class="archive-en">Visual Notes</span>
          </div>
        </a>
        <a href="/archive/photos" class="archive-item" data-desc="关于过往，关于长青的记忆。" data-title="Historical
Photographs">
          <span class="archive-num">V</span>
          <div class="archive-text">
            <span class="archive-zh">图集</span>
            <span class="archive-en">Historical Photographs</span>
          </div>
        </a>
      </nav>
      <div class="archive-preview">
        <div class="preview-content">
          <h3 class="preview-title">The Iodine Tincture Archive</h3>
          <p class="preview-desc">欢迎来到二两碘酊的个人档案馆。</p>
        </div>
      </div>
    </div>
  </section>
  <script src="https://unpkg.com/typed.js@2.1.0/dist/typed.umd.js"></script>
  <script>
    declare const Typed: any;
    document.addEventListener('DOMContentLoaded', () => {
      new Typed('#typewriter', {
        strings: ["Archive"],
        typeSpeed: 80,
        startDelay: 300,
        backDelay: 2500,
        loop: false,
        showCursor: true
      });

      // Hover effect logic
      const items = document.querySelectorAll('.archive-item');
      const list = document.querySelector('.archive-list');
      const previewTitle = document.querySelector('.preview-title');
      const previewDesc = document.querySelector('.preview-desc');
      const previewContent = document.querySelector('.preview-content');
      
      const defaultTitle = "The Iodine Tincture Archive";
      const defaultDesc = "欢迎来到二两碘酊的个人档案馆。";

      items.forEach(item => {
        item.addEventListener('mouseenter', () => {
          const title = item.getAttribute('data-title');
          const desc = item.getAttribute('data-desc');
          
          if (previewTitle && previewDesc && previewContent) {
            // Check if content is actually changing to avoid unnecessary animation
            if (previewTitle.textContent === title && previewDesc.textContent === desc) return;
            
            previewContent.classList.add('fade-out');
            setTimeout(() => {
              previewTitle.textContent = title;
              previewDesc.textContent = desc;
              previewContent.classList.remove('fade-out');
              previewContent.classList.add('fade-in');
            }, 200);
          }
        });
      });
      
      // Reset to default when leaving the list area
      if (list) {
        list.addEventListener('mouseleave', () => {
          if (previewTitle && previewDesc && previewContent) {
            previewContent.classList.add('fade-out');
            setTimeout(() => {
              previewTitle.textContent = defaultTitle;
              previewDesc.textContent = defaultDesc;
              previewContent.classList.remove('fade-out');
              previewContent.classList.add('fade-in');
            }, 200);
          }
        });
      }
      
      // Animation event cleanup
      if (previewContent) {
        previewContent.addEventListener('animationend', () => {
          previewContent.classList.remove('fade-in');
        });
      }
    });
  </script>
  
</BaseLayout>

<style>
  :global(.light-source) {
    display: none;
  }
  .archive-bg-lights {
    position: fixed;
    inset: 0;
    z-index: 0;
    pointer-events: none;
  }
  .red-light-large {
    display: block !important;
    position: absolute;
    width: 75vw;
    height: 75vw;
    background-color: #6d0e11;
    opacity: 0.6;
    mix-blend-mode: screen;
    top: 120px;
    left: -300px;
    border-radius: 50%;
    filter: blur(160px);
    animation: moveRedLightLarge 12s ease-in-out infinite;
  }
  .blue-light-small {
    display: block !important;
    position: absolute;
    width: 36vw;
    height: 36vw;
    background-color: #00094b;
    opacity: 0.8;
    mix-blend-mode: screen;
    top: 40px; /* Slight offset */
    left: 38vw; /* Position to the right of the large red light */
    border-radius: 50%;
    filter: blur(100px);
    animation: moveBlueLightSmall 10s ease-in-out infinite;
  }
  @keyframes moveRedLightLarge {
    0% {
      transform: translate(0, 0) scale(1);
      opacity: 0.6;
    }
    50% {
      transform: translate(50px, 50px) scale(1.1);
      opacity: 0.5;
    }
    100% {
      transform: translate(0, 0) scale(1);
      opacity: 0.6;
    }
  }
  @keyframes moveBlueLightSmall {
    0% { transform: translate(0, 0) scale(1); opacity: 0.8; }
    25% { transform: translate(-80px, 40px) scale(1.1); opacity: 0.7; }
    50% { transform: translate(-30px, 100px) scale(0.9); opacity: 0.85; }
    75% { transform: translate(40px, 60px) scale(1.05); opacity: 0.75; }
    100% { transform: translate(0, 0) scale(1); opacity: 0.8; }
  }
  .archive-container {
    max-width: 1200px;
    margin-left: 10vw;
    margin-right: 5vw;
    padding-top: 15vh;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    position: relative;
    z-index: 1;
  }

  .page-title-row {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.2rem;
    margin: 0 0 0.5rem 0;
  }
  .page-title {
    font-family: 'Bodoni Moda', 'Noto Serif SC', serif;
    font-size: 3rem;
    font-weight: 420;
    font-variation-settings: "opsz" 24, "wght" 420;
    -webkit-font-smoothing: antialiased;
    text-rendering: optimizeLegibility;
    margin: 0;
    height: 3.5rem;
    letter-spacing: 0.05em;
  }
  .page-title-zh {
    font-family: 'Noto Serif SC', serif;
    font-size: 1.45rem;
    font-weight: 700;
    letter-spacing: 0.35em;
    color: rgba(255,255,255,0.85);
    white-space: nowrap;
    margin-top: 2rem;
  }
  .page-title .typed-cursor {
    font-size: 3rem;
    color: var(--text-primary);
    font-family: 'Bodoni Moda', serif;
    font-weight: 300;
    animation: typedjsBlink 0.7s infinite;
  }
  @keyframes typedjsBlink {
    0%, 50%, 100% { opacity: 1; }
    25%, 75% { opacity: 0; }
  }
  .page-subtitle {
    font-family: 'Noto Sans SC', sans-serif;
    font-size: 1.08rem;
    letter-spacing: 0.12em;
    color: rgba(255,255,255,0.5);
    margin-bottom: 2rem;
    margin-top: 0.2rem;
  }
  .divider {
    width: 60px;
    height: 1px;
    background: rgba(255,255,255,0.3);
    margin-bottom: 3rem;
  }

  .archive-content-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 4rem;
    margin-top: 1rem;
    width: 100%;
  }

  .archive-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    width: 50%;
    min-width: 400px;
    flex-shrink: 0; /* 防止被挤压 */
  }
  
  .archive-preview {
    flex: 1;
    position: sticky;
    top: 30vh;
    padding-left: 2rem;
    border-left: 1px solid rgba(255,255,255,0.1);
    min-height: 50vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .preview-content {
    opacity: 1;
    transition: opacity 0.3s ease;
  }

  .preview-content.fade-out {
    opacity: 0;
  }

  .preview-content.fade-in {
    animation: fadeIn 0.4s ease forwards;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .preview-title {
    font-family: 'Bodoni Moda', serif;
    font-weight: 300;
    font-variation-settings: "opsz" 24, "wght" 300;
    font-size: 3.6rem;
    letter-spacing: 0.1em;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
    margin-left: 1rem;
    line-height: 1.1;
    text-transform: uppercase;
    white-space: pre-line;
  }

  .preview-desc {
    font-family: 'Noto Sans SC', sans-serif;
    font-size: 1.1rem;
    color: rgba(255,255,255,0.7);
    line-height: 1.8;
    letter-spacing: 0.05em;
    max-width: 450px;
    margin-left: 1rem;
  }

  .archive-item {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    text-decoration: none;
    color: inherit;
    transition: padding 0.3s ease, background 0.3s ease;
    padding: 1rem 0;
    border-bottom: 1px solid rgba(255,255,255,0.1);
    box-sizing: border-box; /* 确保 padding 不会增加总宽度 */
    width: 100%; /* 确保占据列表宽度 */
  }
  .archive-item:hover {
    padding-left: 1rem;
    border-bottom-color: rgba(255,255,255,0.4);
    background: linear-gradient(to right, rgba(255,255,255,0.05), transparent);
  }
  .archive-num {
    font-family: 'Bodoni Moda', serif;
    font-size: 1.5rem;
    color: rgba(255,255,255,0.4);
    min-width: 2.5rem;
    text-align: right;
    padding-top: 0.1rem;
    transition: color 0.3s ease;
  }
  .archive-item:hover .archive-num {
    color: rgba(255,255,255,0.9);
  }
  .archive-text {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
  }
  .archive-zh {
    font-family: 'Noto Serif SC', serif;
    font-size: 1.35rem;
    color: rgba(255,255,255,0.9);
    letter-spacing: 0.1em;
    transition: color 0.3s ease;
  }
  .archive-en {
    font-family: 'Bodoni Moda', serif;
    font-size: 0.95rem;
    text-transform: uppercase;
    color: rgba(255,255,255,0.5);
    letter-spacing: 0.05em;
    transition: color 0.3s ease;
  }
  .archive-item:hover .archive-zh {
    color: #fff;
    text-shadow: 0 0 10px rgba(255,255,255,0.3);
  }
  .archive-item:hover .archive-en {
    color: rgba(255,255,255,0.7);
  }

  .profile-content {
    margin-top: 2rem;
    margin-bottom: 120px;
    background: rgba(255,255,255,0.05);
    padding: 32px 48px;
    border-radius: 16px;
    color: #fff;
    text-align: center;
    box-shadow: 0 4px 32px rgba(0,0,0,0.2);
  }
  /* 移除旧的 light 样式 */
  @media (max-width: 1024px) {
    .archive-container {
      max-width: 100%;
      margin-right: 5vw;
    }
    .archive-content-wrapper {
      flex-direction: column;
      gap: 3rem;
    }
    .archive-list {
      width: 100%;
      min-width: unset;
    }
    .archive-preview {
      display: none; /* Hide preview on smaller screens or mobile */
    }
  }
  @media (max-width: 768px) {
    .archive-container {
      margin-left: 5vw;
      padding-top: 10vh;
    }
    .page-title-row {
      gap: 0.15rem;
    }
    .page-title {
      font-size: 2rem;
      height: 2.5rem;
    }
    .page-title-zh {
      font-size: 1rem;
    }
    .page-title .typed-cursor {
      font-size: 2rem;
    }
    
    .archive-list {
      gap: 1rem;
    }
    .archive-item {
      padding: 0.8rem 0;
      gap: 1rem;
    }
    .archive-num {
      font-size: 1.2rem;
      min-width: 2rem;
    }
    .archive-zh {
      font-size: 1.1rem;
    }
    .archive-en {
      font-size: 0.8rem;
    }
  }
</style>
